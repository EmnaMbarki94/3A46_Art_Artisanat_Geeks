{% extends 'base.html.twig' %}

{% block title %}Détails de l'article - {{ article.nomA }}{% endblock %}

{% block body %}
<section id="header">
        <nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
        <div class="container-xl">
            <a class="navbar-brand fs-2 p-0 fw-bold text-white" href="/"><i class="fa fa-pencil col_pink me-1 align-middle"></i> art <span class="col_pink span_1">WEB</span> <br> <span class="font_12 span_2">DIGITAL ART</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mb-0 ms-auto">
                
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">About </a>
                </li>
                
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Magasin
                </a>
                <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="{{ path('app_article_list') }}"> Articles</a></li>
                    <li><a class="dropdown-item border-0" href="#"> Product Detail</a></li>
                </ul>
                </li>
                
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Galeries
                </a>
                <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="{{ path('app_galerie') }}"> Galeries</a></li>
                    <li><a class="dropdown-item border-0" href="{{ path('ajoutGalerie') }}"> Créer une galerie</a></li>
                </ul>
                </li>
                
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Pages
                </a>
                <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#"> Shopping Cart</a></li>
                    <li><a class="dropdown-item border-0" href="#"> Checkout</a></li>
                </ul>
                </li>
                        
                <li class="nav-item">
                <a class="nav-link" href="#">Contact</a>
                </li>
                
            </ul>
            </div>
        </div>
        </nav>
    </section>
<section class="container mt-5">
    <div class="row">
        <!-- Colonne pour l'image -->
        <div class="col-md-5">
            <div class="card shadow-lg">
                {% if article.imagePath is not empty %}
                    <img src="{{ asset('uploads/produits/' ~ article.imagePath) }}" width="600" height="300" alt="Image de l'article" class="img-fluid rounded">
                {% else %}
                    <img src="{{ asset('img/default-article.jpg') }}" class="card-img-top" alt="Aucune image disponible">
                {% endif %}
            </div>
        </div>

        <!-- Colonne pour les détails -->
        <div class="col-md-7">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary mb-4">{{ article.nomA }}</h2>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong><i class="fa fa-info-circle me-2"></i> Description :</strong> {{ article.descA }}
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fa fa-dollar-sign me-2"></i> Prix :</strong> {{ article.prixA }} $
                    </li>
                </ul>
                
                <!-- Section avis -->
                <div class="mt-3 text-center">
                    <p><strong>Avis:</strong></p>
                    <span class="font_12 col_yell">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                    </span>
                </div>

                <div class="mt-4 text-center">
                    <a href="{{ path('app_article_list') }}" class="btn btn-secondary me-2">
                        <i class="fa fa-arrow-left"></i> Retour
                    </a>
                    <a href="#" class="btn btn-primary">
                        <i class="fa fa-shopping-cart"></i> Ajouter au panier
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}