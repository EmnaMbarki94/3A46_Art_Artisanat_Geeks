{% extends 'base.html.twig' %}

{% block title %}Détails de l'article - {{ article.nomA }}{% endblock %}

{% block body %}

<section class="container mt-5 pt-5">
    <div class="row pt-5">
        <!-- Colonne pour l'image -->
        <div class="col-md-5">
            <div class="card shadow-lg">
                {% if article.imagePath is not empty %}
                    <img src="{{ asset('uploads/produits/' ~ article.imagePath) }}" width="600" height="300" alt="Image de l'article" class="img-fluid rounded">
                {% else %}
                    <img src="{{ asset('img/default-article.jpg') }}" class="card-img-top" alt="Aucune image disponible">
                {% endif %}
            </div>
        </div>

        <!-- Colonne pour les détails -->
        <div class="col-md-7 ">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary mb-4">{{ article.nomA }}</h2>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong><i class="fa fa-info-circle me-2"></i> Description :</strong> {{ article.descA }}
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fa fa-dollar-sign me-2"></i> Prix :</strong> {{ article.prixA }} $
                    </li>
                </ul>
                
                <!-- Section avis -->
                <div class="mt-3 text-center">
                    <p><strong>Avis:</strong></p>
                    <span class="font_12 col_yell">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                    </span>
                </div>

                <div class="mt-4 text-center">
                    <a href="{{ path('app_article_list') }}" class="btn btn-secondary me-2">
                        <i class="fa fa-arrow-left"></i> Retour
                    </a>
                    <a href="#" class="btn btn-primary">
                        <i class="fa fa-shopping-cart"></i> Ajouter au panier
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}