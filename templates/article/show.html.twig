{% extends 'baseBack.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Article Details</h1>

        <div class="row">
            <!-- Article Details Table -->
            <div class="col-md-8">
                <div class="card shadow-sm p-4 rounded-4 border-0">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ article.id }}</td>
                            </tr>
                            <tr>
                                <th>NomA</th>
                                <td>{{ article.nomA }}</td>
                            </tr>
                            <tr>
                                <th>PrixA</th>
                                <td>{{ article.prixA }}</td>
                            </tr>
                            <tr>
                                <th>DescA</th>
                                <td style="white-space: pre-wrap; word-wrap: break-word;">
                                    {{ article.descA }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Article Image -->
            <div class="col-md-4">
                <div class="card shadow-sm p-4 rounded-4 border-0">
                    <h5>Image</h5>
                    {% if article.imagePath is not empty %}
                        <img src="{{ asset('uploads/produits/' ~ article.imagePath) }}" class="img-fluid rounded shadow-sm" alt="Article Image">
                    {% else %}
                        <span class="text-muted">No image available</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary rounded-pill">Back to list</a>
            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning rounded-pill">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('article/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
