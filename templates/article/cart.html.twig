{% extends 'base.html.twig' %}

{% block title %}Mon Panier
{% endblock %}

{% block body %}
	<section id="center" class="center_o bg_gray pt-2 pb-2">
		<div class="container-xl">
			<div class="row center_o1">
				<div class="col-md-5">
					<div class="center_o1l">
						<h2 class="mb-0">Panier</h2>
					</div>
				</div>
				<div class="col-md-7">
					<div class="center_o1r text-end">
						<h6 class="mb-0">
							<a href="/">Home</a>
							<span class="me-2 ms-2">
								<i class="fa fa-caret-right"></i>
							</span>
							Panier
						</h6>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="cart_page" class="cart pt-4 pb-4">
		<div class="container-xl">
			<div class="cart_2 row">
				<div class="col-md-6">
					<h5>Mon panier</h5>
				</div>
				<div class="col-md-6">
					<h5 class="text-end text-uppercase">
						<a href="{{ path('app_article_list') }}">Retourner au magasin</a>
					</h5>
				</div>
			</div>

			<div class="cart_3 row mt-3">
				<div class="col-md-8">
					<div class="cart_3l">
						<h6>Produits</h6>
					</div>
					{% for item in cart %}
						<div
							class="cart_3l1 mt-3 row ms-0 me-0 align-items-center" style="border: 1px solid #ddd; padding: 18px; border-radius: 5px;">
							<!-- Image -->
							<div class="col-md-3">
								{% if item.imagePath %}
									<img src="{{ asset('uploads/produits/' ~ item.imagePath) }}" alt="Image de {{ item.nomA }}" width="200">
								{% else %}
									<span>Aucune image</span>
								{% endif %}
							</div>

							<!-- Informations sur le produit -->
							<div class="col-md-6">
								<div class="cart_3l1i1">
									<h6 class="fw-bold">
										<a href="#">{{ item.nomA }}</a>
									</h6>
									<h6 class="font_15 mt-3">________________________________</h6>
									<h5 class="col_pink mt-3">{{ item.prixA }}
										TND</h5>
									{# <h5 class="col_pink mt-3">{{ item.descA }}</h5> #}

								</div>
							</div>

							<!-- Quantit√© et actions -->
							<div class="col-md-3">
								<form method="post" action="{{ path('app_update_quantity', {'id': item.id}) }}" class="update-quantity-form">
									<input type="number" min="1" name="quantity" value="{{ item.quantity }}" class="form-control qty-input" data-item-id="{{ item.id }}" placeholder="Qty">
								</form>

								<h6 class="mt-2">
									<a class="button_1" href="{{ path('app_remove_from_cart', {'id': item.id}) }}">üóëÔ∏è</a>
								</h6>

							</div>
						</div>
					{% else %}
						<div class="cart_3l1 mt-3 row ms-0 me-0 pb-0 border-0">
							<div class="col-md-12 text-center">
								<h5>Le panier est vide.</h5>
							</div>
						</div>
					{% endfor %}
				</div>

				<div class="col-md-4">
					<div class="cart_3r" style="border: 1px solid #ddd; padding: 15px; border-radius: 5px;">
						<h6 class="head_1">TOTAL</h6>
						<h5 class="text-center col_pink mt-3 total-price">{{ total }}
							TND</h5>

						<hr>
						<h6 class="text-center mt-3">
							<a class="button" href="{{path ('app_commande_new')}}">Continuer</a>
						</h6><br>
						<h5 class="head_1">Effacer</h5>
						<h6 class="text-center mt-3">
							<a class="button" href="{{ path('app_clear_cart') }}">Effacer Panier üóëÔ∏è</a>
						</h6>

						<hr>
					</div>



				</div>
			</div>
		</div>
	</section>
	<style>


		.button {
			display: inline-block;
			padding: 10px 20px;
			background-color: #8b008b;
			color: white;
			text-decoration: none;
			border-radius: 5px;
		}

		.button_1 {
			display: inline-block;
			padding: 10px 20px;
			background-color: #8b008b;
			color: white;
			text-decoration: none;
			border-radius: 5px;
		}

		.form-control {
			width: 100%;
			padding: 8px;
			border: 1px solid #ccc;
			border-radius: 4px;
		}

		.form-select {
			width: 100%;
			padding: 8px;
			border: 1px solid #ccc;
			border-radius: 4px;
		}
	</style>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
const quantityInputs = document.querySelectorAll('.qty-input');

quantityInputs.forEach(input => {
input.addEventListener('input', function () {
const quantity = parseInt(this.value, 10); // Convertit la valeur en entier
const itemId = this.getAttribute('data-item-id');
// let quantity = parseInt(document.querySelector('[name="quantity"]').value); // R√©cup√©rer la quantit√© du formulaire
if (quantity >= 1) {
fetch(`article/update-quantity/${itemId}?t=${
Date.now()
}`, {
method: 'POST',
headers: {
'Content-Type': 'application/json',
'X-Requested-With': 'XMLHttpRequest'
},
body: JSON.stringify(
{
quantity: parseInt(quantity, 10)
}

) // La quantit√© est bien envoy√©e dans le body
}).then(response => response.json()).then(data => {
console.log("R√©ponse API:", data); // üîπ V√©rifie si "total" est correct
    if (data.success) {
       


const totalPriceElement = document.querySelector('.total-price'); // Assurez-vous d'avoir un √©l√©ment avec cette classe
if (totalPriceElement) {
totalPriceElement.textContent = (data.total ?? 0) + ' TND';
}
} else {
alert(data.message); // Afficher le message d'erreur
}
}).catch(error => {
alert('Erreur serveur');
console.error(error);
});
} else {
alert('La quantit√© doit √™tre au moins 1');
}
});
});
});
	</script>

{% endblock %}
