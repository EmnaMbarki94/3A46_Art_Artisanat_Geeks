{% extends 'base.html.twig' %}

{% block title %}Liste des Articles
{% endblock %}

{% block body %}
	<section id="header">
		<nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
			<div class="container-xl">
				<a class="navbar-brand fs-2 p-0 fw-bold text-white" href="/">
					<i class="fa fa-pencil col_pink me-1 align-middle"></i>
					art
					<span class="col_pink span_1">WEB</span>
					<br>
					<span class="font_12 span_2">DIGITAL ART</span>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mb-0 ms-auto">

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">About
							</a>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Magasin
							</a>
							<ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
								<li>
									<a class="dropdown-item" href="{{ path('app_article_list') }}">
										Articles</a>
								</li>
								<li>
									<a class="dropdown-item border-0" href="#">
										Product Detail</a>
								</li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Galeries
							</a>
							<ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
								<li>
									<a class="dropdown-item" href="{{ path('app_galerie') }}">
										Galeries</a>
								</li>
								<li>
									<a class="dropdown-item border-0" href="{{ path('app_galerie_new') }}">
										Créer une galerie</a>
								</li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Pages
							</a>
							<ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
								<li>
									<a class="dropdown-item" href="#">
										Shopping Cart</a>
								</li>
								<li>
									<a class="dropdown-item border-0" href="#">
										Checkout</a>
								</li>
							</ul>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="#">Contact</a>
						</li>

					</ul>
				</div>
			</div>
		</nav>
	</section>

	<!-- Section Articles -->
	<section id="articles" class="p-4">
		<div class="container-xl">
			<h2 class="text-white text-center mb-4">Liste des Articles</h2>
			<div class="row">
				{% for article in articles %}
					<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
						<div
							class="card shadow-sm text-center border-0 h-100">
							<!-- Image -->
							<div class="card-img-top">
								<a href="{{ path('article_detail', {'id': article.id}) }}">
									<img src="{{ asset('uploads/produits/' ~ article.imagePath) }}" class="img-fluid rounded img-fixed" alt="Article Image">
								</a>
							</div>
							<!-- Détails -->
							<div class="card-body d-flex flex-column justify-content-between">
								<h5 class="card-title text-uppercase">
									<a class="text-dark text-decoration-none" href="{{ path('article_detail', {'id': article.id}) }}">{{ article.nomA }}</a>
								</h5>
								<h6 class="text-muted mt-2 mb-1">
									<strong>Prix :</strong>
									{{ article.prixA }}
									TND</h6>
								<p class="card-text text-muted desc-fixed">{{ article.descA|slice(0, 80) }}...</p>
								<!-- Bouton Voir -->
								<a href="{{ path('article_detail', {'id': article.id}) }}" class="btn btn-primary btn-sm mt-auto">
									<i class="fa fa-eye"></i>
									Voir
								</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-md-12 text-center">
						<p class="alert alert-info">Aucun article trouvé.</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

	<style>
		/* Assure que toutes les cartes ont la même hauteur */
		.card {
			height: 100%;
			display: flex;
			flex-direction: column;
		}
		.card-body {
			flex-grow: 1;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}
		/* Fixe une hauteur uniforme pour les images */
		.img-fixed {
			width: 100%;
			height: 200px; /* Ajustez selon vos besoins */
			object-fit: cover;
		}
		/* Fixe la hauteur du titre et de la description pour éviter les décalages */
		.card-title {
			min-height: 50px;
		}
		.desc-fixed {
			min-height: 60px;
			overflow: hidden;
		}
	</style>


{% endblock %}
