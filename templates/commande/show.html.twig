{% extends 'baseBack.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Commande Details</h1>

        <div class="row">
            <!-- Commande Details Table -->
            <div class="col-md-8">
                <div class="card shadow-sm p-4 rounded-4 border-0">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ commande.id }}</td>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <td>{{ commande.total }}</td>
                            </tr>
                            <tr>
                                <th>AdresseC</th>
                                <td>{{ commande.adresseC }}</td>
                            </tr>
                            <tr>
                                <th>DateC</th>
                                <td>{{ commande.dateC ? commande.dateC|date('Y-m-d') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary rounded-pill">Back to list</a>
            <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-warning rounded-pill">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('commande/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}