{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<section id="center" class="center_o bg_gray pt-2 pb-2">
    <div class="container-xl">
        <div class="row center_o1">
            <div class="col-md-5">
                <div class="center_o1l">
                    <h2 class="mb-0">Detail</h2>
    
                </div>
          </div>
            <div class="col-md-7 text-end">
                <h6 class="mb-0"><a href="{{ path('app_home') }}">Home</a> 
                    <span class="me-2 ms-2"><i class="fa fa-caret-right"></i></span> Événement
                    <span class="me-2 ms-2"><i class="fa fa-caret-right"></i></span> detail

                </h6>
            </div>
        
    
    </div>

</section>

<section class="container-xl mt-5 pt-5">
  <div class="row detail_1">
    <!-- Colonne pour le carrousel d'images -->
    <div class="col-md-5">
      <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
         <figure class="effect-jazz mb-0">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="{{ asset('uploads/photosevents/' ~ event.photoE) }}" class="d-block w-100" alt="Event Image">
          </div>
          <div class="carousel-item">
            <img src="{{ asset('uploads/photosevents/' ~ event.photoE) }}" class="d-block w-100" alt="Event Image">
          </div>
          <div class="carousel-item">
            <img src="{{ asset('uploads/photosevents/' ~ event.photoE) }}" class="d-block w-100" alt="Event Image">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
</figure>
    <!-- Colonne pour les détails de l'événement -->
    <div class="col-md-7">
      <div class="detail_1r">
        <h2 class="text-primary" style="color: #800080 !important;">{{ event.nom }}</h2>

        
       
        <p>{{ event.infoE }}</p>

        <!-- Boutons de réservation -->
        <div class="d-flex align-items-center mt-3">
            <!-- Bouton mauve avec couleur personnalisée -->
            <a href="{{ path('app_evenement_listeF', {'id': event.id}) }}" class="btn" style=" color: white; border: none; padding: 10px 20px;"><i class="fa fa-arrow-left"></i> Retour
                    </a>

            <a href="{{ path('app_reservation_new', {'id': event.id}) }}" class="btn" style="background-color: #800080; color: white; border: none; padding: 10px 20px;">
            <i class="fa fa-ticket"></i> Réserver</a>
        </div>



        <div class="mt-4 mb-3">
          <p>Category: <a class="text-primary"class="text-primary" style="color: #800080 !important;" href="#">Event</a></p>
        </div>

        
      </div>
    </div>
  </div>

  <!-- Onglets de description et revue -->
  <div class="row detail_2 mt-5">
    <div class="col-md-12">
      <ul class="nav nav-tabs mb-0">
        <li class="nav-item d-inline-block me-3">
          <a href="#description" data-bs-toggle="tab" aria-expanded="false" class="nav-link active">
            DESCRIPTION
          </a>
        </li>
        
      </ul>
    </div>
  </div>

  <!-- Contenu des onglets -->
  <div class="row detail_3 mt-4">
    <div class="tab-content">
      <!-- Section Description -->
      <div class="tab-pane active" id="description">
        <div class="home_i row">
          <div class="col-md-12">
            <h4>Description de l'Événement</h4>
            <p>{{ event.infoE }}</p>
          </div>
        </div>
      </div>
      
      <!-- Section Reviews -->
          </div>
  </div>
</section>

{% endblock %}

