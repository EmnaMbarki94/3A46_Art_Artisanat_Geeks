{% extends 'base.html.twig' %}

{% block title %}View Reponses{% endblock %}

{% block body %}
 <h2 class="text-center mb-4">Reponse de la reclamation</h2>

<section id="reclamation-view" class="p-5 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            
                            <tr>
                                <th>Reponse</th>
                                <td>{{ reponse.descRep }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
