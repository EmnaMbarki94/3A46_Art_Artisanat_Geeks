	 <div class="footer_1i">
	  <hr class="line_1"><h5 class="mb-3">RECENT WORKS</h5>
	  <div class="footer_1i1 row">
	   <div class="col-md-4 col-4 p-0">
	    <div class="footer_1i1i">
			  <figure class="effect-jazz mb-0">
				<a href="#"><img src="{{ asset('img/30.jpg') }}" class="w-100" alt="abc"></a>
			  </figure>
			</div>
	   </div>
	   <!-- Répétez pour d'autres images récentes -->
	  </div>
	 </div>
	</div>
   </div>
   <div class="row footer_2 mt-4 text-center">
    <div class="col-md-12">
	 <ul>
	  <li class="d-inline-block me-3 font_14"><a href="#">CONTACT</a></li>
	  <li class="d-inline-block me-3 font_14"><a href="#">PRIVACY POLICY</a></li>
